				svg(width="58" height="58" viewBox="0 0 58 58" xmlns="http://www.w3.org/2000/svg")
					circle(cx="29" cy="29" r="28" fill="#32384B" stroke="white" stroke-width="2")
					path(d="M42 29L21 41.1244L21 16.8756L42 29Z" fill="white")
